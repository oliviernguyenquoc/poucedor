<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BaseActivity">

    <!-- activity view -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar"
            android:id="@+id/toolbar"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pouce_logo"
            android:contentDescription="@string/app_name"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/pouce_logo"
            android:paddingTop="30dp"
            android:scaleType="centerCrop"
            android:paddingBottom="20dp" />

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/ScrollView01"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="20dp">

                <TextView
                    android:id="@+id/loic_title"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/loic_title"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_xlarge"
                    android:paddingBottom="10dp" />

                <TextView
                    android:id="@+id/loic_body"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/loic_body"
                    android:paddingBottom="10dp"/>

                <TextView
                    android:id="@+id/olivier_title"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/olivier_title"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_xlarge"
                    android:paddingBottom="10dp"/>

                <TextView
                    android:id="@+id/olivier_body"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/olivier_body"
                    android:paddingBottom="10dp" />


            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <!-- Nav drawer -->
    <include layout="@layout/navdrawer" />

</android.support.v4.widget.DrawerLayout>
