<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BaseActivity">

    <!-- activity view -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="40dp" />

            <TextView
                android:id="@+id/localisationCheckBoxText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/localisationCheckBoxText" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/giveLocalisation"
                android:layout_width="208dp"
                android:layout_height="wrap_content"
                android:paddingLeft="40dp"
                android:text="@string/giveLocalisation" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="64dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/everyTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/everyTime" />

        </LinearLayout>


    </LinearLayout>

    <!-- Nav drawer -->
    <include layout="@layout/navdrawer" />

</android.support.v4.widget.DrawerLayout>
